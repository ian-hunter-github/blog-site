{
  "compilerOptions": {
    "target": "ESNext", // Modern JavaScript for Vite and Vitest
    "module": "ESNext", // Use ES Modules
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Support DOM and ESNext features
    "jsx": "react-jsx", // Enable JSX with React
    "moduleResolution": "node", // Resolve modules like Node.js
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Enable interoperability for CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-sensitive
    "types": ["vite/client", "vitest/globals"], // Include Vite and Vitest types globally
    "allowJs": true, // Allow JavaScript files
    "resolveJsonModule": true, // Enable JSON imports
    "isolatedModules": true, // Ensure each file is a separate module
    "noEmit": true, // Prevent emitting files during compilation

    "baseUrl": "./",
    "paths": { "@/*": ["src/*"]},
  },
  "include": [
    "src/**/*", // Include source files
  ],
}
